@page "/Admin/Manager"
@model Assignment.Areas.Admin.Pages.ManagerModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Accounts</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.2/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="font-sans bg-gray-100">
    <!-- Sidebar -->
    <div class="flex">
        <nav class="w-64 bg-gray-800 p-5">
            <div class="text-white text-xl font-bold">Admin Panel</div>
            <ul class="mt-5">
                <li class="py-2 text-white"><a href="index.html">Dashboard</a></li>
                <li class="py-2 text-white"><a href="account.html">Manage Accounts</a></li>
                <li class="py-2 text-white"><a href="revenue.html">Revenue</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-1 p-5">
            <header class="flex justify-between items-center">
                <div class="text-2xl font-semibold">Manage Accounts</div>
            </header>

            <!-- Account Table -->
            <table class="min-w-full mt-5 bg-white rounded-lg shadow-md">
                <thead>
                    <tr>
                        <th class="px-6 py-3 border-b">Username</th>
                        <th class="px-6 py-3 border-b">Email</th>
                        <th class="px-6 py-3 border-b">Role</th>
                        <th class="px-6 py-3 border-b">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example rows -->
                    <tr>
                        <td class="px-6 py-3 border-b">John Doe</td>
                        <td class="px-6 py-3 border-b">john.doe@example.com</td>
                        <td class="px-6 py-3 border-b">Admin</td>
                        <td class="px-6 py-3 border-b">
                            <button class="bg-red-500 text-white px-4 py-2 rounded">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="px-6 py-3 border-b">Jane Smith</td>
                        <td class="px-6 py-3 border-b">jane.smith@example.com</td>
                        <td class="px-6 py-3 border-b">User</td>
                        <td class="px-6 py-3 border-b">
                            <button class="bg-red-500 text-white px-4 py-2 rounded">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
