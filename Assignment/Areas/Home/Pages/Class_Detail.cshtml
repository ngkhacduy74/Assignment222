    <script>
              function selectTrainer(name, expertise, email, dob, achievements) {
            if (!name || !expertise || !email || !dob || !achievements) {
                console.error("Dữ liệu PT không hợp lệ:", { name, expertise, email, dob, achievements });
                return;
            }

