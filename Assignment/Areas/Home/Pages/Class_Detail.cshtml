            document.getElementById("trainerEmail").textContent = "Email: " + email;
            document.getElementById("trainerDOB").textContent = dob;
            document.getElementById("trainerExpertise").textContent = expertise;
            document.getElementById("trainerAchievements").textContent = achievements;
            document.getElementById("trainerDetails").style.display = "block";

            // Hiển thị nút Submit
