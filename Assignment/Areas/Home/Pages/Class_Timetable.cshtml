    <script>
                window.onload = function () {
            // Lấy thời gian hiện tại
            const currentTime = new Date();

            // Mảng thời gian các khung giờ, với định dạng "HH:mm" (24 giờ)
            const timeSlots = [
                { slot: '6:00am - 8:00am', startTime: '06:00', endTime: '08:00' },
                { slot: '8:30am - 10:30am', startTime: '08:30', endTime: '10:30' },
                { slot: '2:00pm - 4:00pm', startTime: '14:00', endTime: '16:00' },
                { slot: '4:30pm - 6:30pm', startTime: '16:30', endTime: '18:30' },
                { slot: '7:00pm - 9:00pm', startTime: '19:00', endTime: '21:00' }
            ];

            // Duyệt qua các hàng trong bảng
            const rows = document.querySelectorAll('.class-timetable tbody tr');

            rows.forEach((row, index) => {
                const startTime = timeSlots[index].startTime;
                const endTime = timeSlots[index].endTime;

                const startTimeObj = new Date();
                const endTimeObj = new Date();

                const [startHour, startMinute] = startTime.split(':');
                const [endHour, endMinute] = endTime.split(':');

                startTimeObj.setHours(startHour, startMinute, 0);
                endTimeObj.setHours(endHour, endMinute, 0);

                // Nếu thời gian hiện tại đã qua thời gian kết thúc của khung giờ, ẩn hàng đó
                if (currentTime > endTimeObj) {
                    row.style.display = "none"; // Ẩn hàng không còn hợp lệ
                }
            });
        };

